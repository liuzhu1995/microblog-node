extends layout

block content
  form(method='post')
    fieldset
      legend 用户登陆
      div(class='form-group row')
        label(for="username" class="col-sm-1 col-form-label") 用户名
        div.col-sm-3
          input(type="text" class="form-control" id="username" name="username")
      div(class='form-group row')
        label(for="password" class="col-sm-1 col-form-label") 密码
        div.col-sm-3
          input(type="password" class="form-control" id="password" name="password")
      div.form-actions
        button(class='btn btn-primary' type='submit') 登陆
