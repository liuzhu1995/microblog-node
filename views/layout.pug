doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='https://cdn.bootcss.com/twitter-bootstrap/4.3.1/css/bootstrap.min.css')
    script(rel='javascript', src='https://cdn.bootcss.com/jquery/3.4.1/jquery.min.js')
    script(rel='javascript', src='https://cdn.bootcss.com/twitter-bootstrap/4.3.1/js/bootstrap.min.js')
  body
    nav(class='navbar navbar-expand-md navbar-dark fixed-top bg-dark')
       a(class='navbar-brand' href='/') Microblog
       div(class='collapse navbar-collapse' id='navbarCollapse')
         ul(class='navbar-nav mr-auto')
           li(class='nav-item active')
             a(class='nav-link' href='/') 首页
           if !user
             li.nav-item
               a(class='nav-link' href='/login') 登陆
             li.nav-item
               a(class='nav-link' href='/register') 注册
           else
             li.nav-item
             a(class='nav-link' href='/logout') 退出
    div(id='container' class='container')
      if success
        div(class='alert alert-success')= success
      if error
        div(class='alert alert-error')= error
      block content
      hr.featurette-divider
      footer
        p.
